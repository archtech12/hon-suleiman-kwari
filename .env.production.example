# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ghali-dashboard?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secure_random_jwt_secret_key_at_least_32_characters

# API URL (Your Vercel deployment URL)
NEXT_PUBLIC_API_URL=https://your-app-name.vercel.app

# Sanity Configuration (if using)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
